@model BlowOut.Models.RequestInfo

@{
    ViewData["Title"] = "Request Info";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-sm-6">
            <h2 id="center-sm-left">@ViewData["Title"] - @ViewBag.RentalType @ViewBag.InstrumentName</h2>
        </div>
        <div class="col-sm-6">
            <h2 id="center-sm-right">$@ViewBag.InstrumentPrice.00<sup>*</sup></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 text-center product">
            <img src="@ViewBag.InstrumentPicture" width="80%" class="well">
        </div>
        <div class="col-md-8">
            <form asp-controller="rentals" asp-action="MessageSent" asp-route-id="@ViewBag.InstrumentId" asp-route-instname="@ViewBag.InstrumentName" asp-route-type="@ViewBag.RentalType" method="post" class="form-horizontal" role="form">
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <b><span asp-validation-for="Name" class="text-danger"></span></b>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <b><span asp-validation-for="Email" class="text-danger"></span></b>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                                <b><span asp-validation-for="Message" class="text-danger"></span></b>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Send Message" id="validate" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <p class="text-center sub-text"><i><sup>*</sup>This price reflects the monthly payment amount. The cash equivilant of 18 monthly payments is required for instrument ownership to be transfered to a rental customer. Rental payments have an interest APR of 0%.</i></p>
        </div>
    </div>
</div>
