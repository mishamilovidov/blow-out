@{
    ViewData["Title"] = "Order Complete";

    ViewBag.LowerCaseRentalType = ViewBag.RentalType.ToLower();
    ViewBag.LowerCaseInstrumentName = ViewBag.InstrumentName.ToLower();
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <span class="sub-text pull-right">Customer Infomation <i class="glyphicon glyphicon-chevron-right"></i>  Review Order  <i class="glyphicon glyphicon-chevron-right"></i>  <b style="color:rgb(55,123,181)"><i>Order Complete</i></b></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h2 id="center-sm-left">@ViewData["Title"]</h2>
        </div>
        <div class="col-sm-6">
            <h2 id="center-sm-right">Order #@ViewBag.OrderNumber</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 text-center product">
            <img src="@ViewBag.InstrumentPicture" width="80%" class="well">
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12" style="margin-top:20px;">
                    <p>Thanks for your order @ViewBag.CustFullName! We hope you enjoy renting your @ViewBag.LowerCaseRentalType @ViewBag.LowerCaseInstrumentName. Be on the lookout for a confirmation email.</p>
                    <p>We will reach out to you when you can pick up your order and how to make your first payment very soon.</p>
                </div>
                <div class="col-md-12" style="margin-top:20px;">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Order Date: <span class="pull-right">@ViewBag.OrderDate</span></h5>
                            <h5>Instrument: <span class="pull-right">@ViewBag.InstrumentName</span></h5>
                            <h5>Rental Type: <span class="pull-right">@ViewBag.RentalType</span></h5>
                            <h5>Monthly Payment: <span class="pull-right">$@ViewBag.InstrumentPrice</span></h5>
                            <h5>18-Month Total: <span class="pull-right">$@ViewBag.InstrumentFullPrice</span></h5>
                        </div>
                        <div class="col-md-6">
                            <h5>Name: <span class="pull-right">@ViewBag.CustFullName</span></h5>
                            <h5>Address: <span class="pull-right">@ViewBag.CustAddress</span></h5>
                            <h5>Email: <span class="pull-right">@ViewBag.CustEmail</span></h5>
                            <h5>Phone: <span class="pull-right">@ViewBag.CustPhone</span></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 ">
                    <a asp-controller="home" asp-action="Index" class="btn btn-info pull-right" role="button">Finish</a>
                </div>
            </div>
        </div>
    </div>
</div>
