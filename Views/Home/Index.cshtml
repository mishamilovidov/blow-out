@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12 text-center" style="margin-bottom:25px;">
            <img style="width:15%;" src="~/img/blowout-logo.png">
            <h2>BlowOut Instrument Rentals</h2>
            <p><em>The fastest and easiest place to rent new and used instruments</em></p>
        </div>
        <div class="col-md-12 text-center" style="margin-bottom:25px;">
            <a asp-area="" asp-controller="rentals" asp-action="Index">
